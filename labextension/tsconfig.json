{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["DOM", "ES2018", "ES2020.Intl"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "ES2018"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/widgets/deploys-progress/KatibProgress.tsx",
    "src/widgets/KatibDialog.tsx",
    "src/widgets/VolumesPanel.tsx"
  ]
}
